  <body>

    <div class="container-fluid">
      <div class="row">
        <div class="col-md-4 col-md-offset-4">
          <div class="panel panel-default">
            <!-- Default panel contents -->
            <div class="panel-heading">Panel heading</div>
            <div class="panel-body">
              <h1><a href="/boss">HOME</a></h1>
              <h2>Search Task</h2>
              <p>List Tasks</p>
            </div>

            <!-- Table -->
            <table class="table">
              <thead>
                <tr>
                  <td>ID</td>
                  <td>Task</td>
                  <td>Complete</td>
                  <td>Deadline</td>
                  <td>option</td>
                </tr>
              </thead>
              <tbody>
                <% tasks.forEach(task => { %>
                  <tr>
                    <td><%= task.id %></td>
                    <td><%= task.task %></td>
                    <td><%= task.is_complete %></td>
                    <td><%= helpers.convertDate(task.deadline) %></td>
                    <td><a id="edit-button" href="/boss/edit/<%= task.id %>">Edit</a>  <a id= "delete-button" onclick="myFunction(<%= task.id %>)">Delete</a></td>
                  </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
        </div>
      </div>
    </div>


    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="js/bootstrap.min.js"></script>
    <script>
      function myFunction(id="") {
          var txt;
          var r = confirm(`Are you sure want to delete ${id} ?`);
          if (r == true) {
              document.location = `/boss/delete/${id}`
          } else {
              document.location = `/boss/`
          }
      }
  </script>
  </body>
</html>
